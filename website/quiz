    <script>
        /* Full box variable */
          var one = document.getElementById('quiz-box1');
          var two = document.getElementById('quiz-box2');
          var three = document.getElementById('quiz-box3');
          var four = document.getElementById('quiz-box4');

          /* Answer variables */
          var a1 = document.getElementsByClassName('answer1');
          var a2 = document.getElementsByClassName('answer2');
          var a3 = document.getElementsByClassName('answer3');

          /* Decision links -- are they needed?
          var halloween = document.getElementById('answer4');
          var valentine = document.getElementById('answer5');*/
          
            /* functions */
          function answer1() {
              one.style.display = "none";
              two.style.display = "block";
          }

        

          function answer2() {
              two.style.display = "none";
              three.style.display = "block";
          }


          function answer3() {
              three.style.display = "none";
              four.style.display = "block";
          }


          a1[0].addEventListener("click", answer1);
          a1[1].addEventListener("click", answer1);
          
          a2[0].addEventListener("click", answer2);
          a2[1].addEventListener("click", answer2);

          a3[0].addEventListener("click", answer3);
          a3[1].addEventListener("click", answer3);



